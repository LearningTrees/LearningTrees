@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <div class="col-lg-6">
        <h2>Learn</h2>

        <h4>Type your question here :</h4>
        <input id="question" type="text" />
        <button class="btn btn-primary" onclick="btnClick()">Submit</button>
    </div>
    <div class="col-lg-6">
        <h2>Teach</h2>

        <h4>Outstanding questions here </h4>

        <ul class="list-group">
            <li class ="list-group-item"><a href="#" onclick="answerBtnClick();return false;">This is a new question</a></li>
            
        </ul>
    </div>
</div>


<script>
    function btnClick() {
        var question1 = $('#question').val();
        if (question1) {
            var redirect = '@Url.Action("Index", "TeachingRoom")';
            redirectPost(redirect, { question: question1 });
        }

    }

    function answerBtnClick() {
        var q = 'This is a new question';
        var redirect = '@Url.Action("Index", "TeachingRoom")';
        redirectPost(redirect, { question: q });
    }


    

    function redirectPost(location, args) {
        var form = '';
        $.each(args, function (key, value) {
            value = value.split('"').join('\"')
            form += '<input type="hidden" name="' + key + '" value="' + value + '">';
        });
        $('<form action="' + location + '" method="POST">' + form + '</form>').appendTo($(document.body)).submit();
    }
</script>